@model ProjetoAutorLivro.Models.Autor



<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <form method="post" action="/Autor/Edit">

            <div class="form-group">
                <input value="@Model.IdAutor" name="IdAutor" hidden />

                <div class="form-group">
                    <label class="control-label col-md-2">Nome</label>
                    <div class="col-md-10">
                        <input value="@Model.Nome" name="Nome" class="form-control" />
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-md-2">País</label>
                    <div class="col-md-10">
                        <input value="@Model.Pais" name="Pais" class="form-control" />
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
